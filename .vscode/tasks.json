{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "lint",
            "command": "eslint",
            "type": "shell",
            "args": [
                "${file}",
                "-c",
                "${workspaceFolder}/.eslintrc.json",
                "--quiet"
            ],
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            },

            "problemMatcher": "$eslint-stylish"
        }
    ]
}